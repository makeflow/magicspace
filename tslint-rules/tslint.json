{
  "extends": "vts/tslint-prettier",
  "rules": {
    "import-groups": [
      true,
      {
        "groups": [
          {"name": "node-core", "test": "$node-core"},
          {"name": "node-modules", "test": "$node-modules", "sideEffect": true},
          {"name": "node-modules", "test": "$node-modules"}
        ],
        "ordered": true
      }
    ],
    "scoped-modules": true,
    "explicit-return-type": true,
    "import-path-convention": true,
    "import-path-strict-hierarchy": [
      true,
      {
        "rules": {
          "core": [],
          "utils": [],
          "services": ["core", "utils"],
          "service-entrances": ["services"],
          "main": ["service-entrances"]
        },
        "baseUrl": "src"
      }
    ]
  },
  "rulesDirectory": ["bld/rules"]
}
