{
  "root": true,
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "es2020": true
  },
  "overrides": [
    {
      "files": ["**/*.{ts,tsx}"],
      "extends": ["plugin:@mufan/default"],
      "parserOptions": {
        "project": "./packages/**/tsconfig.json"
      }
    },
    {
      "files": ["packages/core/**/*.{ts,tsx}"],
      "rules": {
        "no-console": ["error", {}]
      }
    }
  ]
}
